(defpoll battery-icon-path
  :interval "10s"
  "~/.config/eww/scripts/bateria")

(defwidget bateria []
  (image :path (battery-icon-path) :class "bateria"))

(defwindow bateria
  :monitor 0 ;; <- Isso forÃ§a o Eww a usar o primeiro monitor detectado
  :geometry (geometry :x 10 :y 10 :width 40 :height 40)
  :stacking "fg"
  :anchor "top left"
  :exclusive false
  (bateria))
